<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smaexample">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SMA Example"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity"/>
        <activity android:name=".Activities.RegisterFirebaseActivity" />
        <activity android:name=".Activities.PhotoGalleryActivity" />
        <activity android:name=".Activities.FirstMenuActivity" />
        <activity android:name=".Activities.FirebaseLoginActivity" />
        <activity android:name=".Activities.ScrollViewExampleActivity" />
        <activity android:name=".Activities.RoomActivity" />
        <activity android:name=".Activities.TestActivty" />
        <activity android:name=".Activities.SecondActivity" />
        <activity android:name=".Activities.GoogleFitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>